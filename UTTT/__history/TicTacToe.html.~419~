				var block1, block2, block3, block4, block5, block6, block7, block8, block9;
				for (int i = 1; i <= 9; i++) {
					if (nameOfBlock == '1') {
						
					}
				}
			}
			catch (err) {
				alert(err);
			}
		}
	</script>
